<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="20dp" /> <!-- Adjust the radius value as needed -->
        </shape>
    </item>

    <!-- Shadow -->
    <item android:right="2dp" android:left="2dp" android:bottom="4dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="20dp" /> <!-- Adjust the radius value to match the background -->
            <padding android:left="2dp" android:right="2dp" android:top="4dp" android:bottom="2dp" />
        </shape>
    </item>
</layer-list>
